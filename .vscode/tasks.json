{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build package",
      "type": "shell",
      "command": ["pipenv run pipenv-setup sync &&", "python setup.py sdist"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build all",
      "type": "shell",
      "command": [
        "pipenv run pipenv-setup sync &&",
        "cd frontend && npm run build && cd ../ &&",
        "python setup.py sdist"
      ],
      "group": "build"
    }
  ]
}
